<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net452</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/awjacobson/PodcastSdk</PackageProjectUrl>
    <RepositoryUrl>https://github.com/awjacobson/PodcastSdk</RepositoryUrl>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <Copyright>Copyright 2019</Copyright>
    <PackageTags>c# csharp .net</PackageTags>
    <Authors>Aaron Jacobson</Authors>
    <Company />
    <Version>1.0.1</Version>
    <Description>.NET classes suitable for serializing to an XML RSS podcast feed.</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.ComponentModel.Annotations" Version="4.6.0" />
  </ItemGroup>

</Project>
